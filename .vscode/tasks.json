{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "shell",
      "args": ["build", "/property:GenerateFullPaths=true", "/consoleloggerparameters:NoSummary"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build app",
      "command": "dotnet",
      "type": "shell",
      "args": ["build", "src/Koffee", "/property:GenerateFullPaths=true", "/consoleloggerparameters:NoSummary"],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test all",
      "type": "shell",
      "command": "dotnet",
      "args": ["test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "test by name",
      "type": "shell",
      "command": "dotnet",
      "args": ["test", "--logger='console;verbosity=detailed'", "--filter='FullyQualifiedName~${input:testFilter}'"],
      "group": "test",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "testFilter",
      "description": "Test Name Filter:",
      "type": "promptString"
    }
  ]
}
