<Window x:Class="KoffeeUI.ToolEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Tool" Width="600" Height="205" FontSize="15" WindowStartupLocation="CenterOwner">
  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="AppStyles.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Window.Resources>
  <Grid Margin="10">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <Label Name="ToolNameLabel" Content="Tool Name:" VerticalAlignment="Center" Grid.Row="0"/>
    <TextBox Name="ToolName" x:FieldModifier="public" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1"
             Validation.ErrorTemplate="{StaticResource ValidationTemplate}"/>

    <Label Name="ExeLabel" Content="Command/Executable:" VerticalAlignment="Center" Grid.Row="1"/>
    <TextBox Name="Exe" x:FieldModifier="public" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1"
             Validation.ErrorTemplate="{StaticResource ValidationTemplate}"/>

    <Label Name="ArgumentsLabel" Content="Arguments:" VerticalAlignment="Center" Grid.Row="2"/>
    <DockPanel Grid.Row="2" Grid.Column="1">
      <Grid Name="ArgumentsHelp" x:FieldModifier="public" DockPanel.Dock="Right" Margin="4 0 0 0">
        <Ellipse Width="20" Height="20" Fill="{StaticResource ControlBrush}"/>
        <TextBlock Text="?" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
      </Grid>
      <TextBox Name="Arguments" x:FieldModifier="public" VerticalAlignment="Center"
               Validation.ErrorTemplate="{StaticResource ValidationTemplate}"/>
    </DockPanel>

    <CheckBox Name="HideWindow" x:FieldModifier="public" Content="Hide Window" Grid.Row="3" Grid.ColumnSpan="2"
              VerticalAlignment="Center" Margin="4 2"/>

    <Grid Margin="0,8,0,0" Grid.Row="4" Grid.ColumnSpan="2">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Name="CancelButton" x:FieldModifier="public" Content="Cancel" Width="80" Margin="8 0 0 0"/>
        <Button Name="SaveButton" x:FieldModifier="public" Content="Save" Width="80" Margin="8 0 0 0"/>
      </StackPanel>
    </Grid>
  </Grid>
</Window>
