<Window x:Class="KoffeeUI.KeyBinderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Key Binding" Width="500" Height="250" FontSize="15">
  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="AppStyles.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Window.Resources>
  <StackPanel Orientation="Vertical" Margin="10">
    <StackPanel Orientation="Horizontal">
      <TextBlock Text="Key Binding for:"/>
      <TextBlock Name="CommandName" x:FieldModifier="public" Text="Command" FontWeight="Bold"/>
    </StackPanel>
    <TextBlock Name="KeyBinding" x:FieldModifier="public"/>
    <TextBlock Name="Conflict" x:FieldModifier="public" Foreground="{StaticResource ErrorBrush}" TextWrapping="Wrap"/>
    <TextBlock Name="Prompt" x:FieldModifier="public" Text="Press..."/>
  </StackPanel>
</Window>