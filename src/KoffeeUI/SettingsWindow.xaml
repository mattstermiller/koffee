<Window x:Class="KoffeeUI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Koffee Settings" Width="700" Height="650" FontSize="15" WindowStartupLocation="CenterOwner">
  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="AppStyles.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Window.Resources>
  <Grid Margin="10">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="20"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Left column -->
    <TextBlock Margin="4 2" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
      <Hyperlink Name="ReadmeLink" NavigateUri="https://github.com/mattstermiller/koffee#using-koffee">
        How To Use Koffee
      </Hyperlink>
    </TextBlock>

    <Label Name="LabelStartPath" Content="Startup path:" Grid.Column="0" Grid.Row="1"/>
    <RadioButton Name="StartPathPrevious" x:FieldModifier="public" GroupName="Start Path"
                 Content="Restore previous path" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1"/>
    <DockPanel Grid.Column="1" Grid.Row="2">
      <RadioButton Name="StartPathDefault" x:FieldModifier="public" GroupName="Start Path" Content="Default:"
                   VerticalAlignment="Center" DockPanel.Dock="Left"/>
      <TextBox Name="DefaultPath" x:FieldModifier="public" Margin="5,0,0,0" Height="24" VerticalAlignment="Center"
               Validation.ErrorTemplate="{StaticResource ValidationTemplate}"/>
    </DockPanel>

    <Label Name="LabelPathFormat" Content="Path format:" VerticalAlignment="Center" Grid.Column="0" Grid.Row="3"/>
    <RadioButton Name="PathFormatWindows" x:FieldModifier="public" Content="Windows" GroupName="PathFormat"
                  VerticalAlignment="Center" Grid.Column="1" Grid.Row="3"/>
    <RadioButton Name="PathFormatUnix" x:FieldModifier="public" Content="Unix" GroupName="PathFormat"
                  VerticalAlignment="Center" Grid.Column="1" Grid.Row="4"/>

    <!-- Right column -->
    <CheckBox Name="ShowHidden" x:FieldModifier="public" Content="Show hidden files and folders"
              VerticalAlignment="Center" Grid.Column="3" Grid.Row="0"/>
    <CheckBox Name="ShowNextUndoRedo" x:FieldModifier="public" Content="Show next Undo/Redo action"
              VerticalAlignment="Center" Grid.Column="3" Grid.Row="1"/>
    <CheckBox Name="ShowFullPathInTitleBar" x:FieldModifier="public" Content="Show full path in title bar"
              VerticalAlignment="Center" Grid.Column="3" Grid.Row="2"/>
    <CheckBox Name="RefreshOnActivate" x:FieldModifier="public" Content="Refresh window on focus"
              VerticalAlignment="Center" Grid.Column="3" Grid.Row="3"/>

    <Button Name="EditSearchExclusions" x:FieldModifier="public" Content="Recursive Search Exclusions..."
            Grid.Column="3" Grid.Row="4"/>

    <!-- Commands / key bindings -->
    <Grid Grid.Row="5" Grid.ColumnSpan="4">
      <Label Content="Commands:"/>
      <Label Content="Modifiers: c- Ctrl, s- Shift, a- Alt, m- Meta/Windows" HorizontalAlignment="Right"/>
    </Grid>

    <DataGrid Name="Commands" x:FieldModifier="public" AutoGenerateColumns="False" IsReadOnly="True"
              SelectionMode="Single" CanUserResizeRows="False" AreRowDetailsFrozen="True" GridLinesVisibility="None"
              RowHeaderWidth="0" ColumnWidth="*" HorizontalScrollBarVisibility="Hidden" Grid.Row="6" Grid.ColumnSpan="4">
      <DataGrid.Resources>
        <Style TargetType="{x:Type DataGridCell}">
          <Setter Property="BorderThickness" Value="0"/>
          <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
      </DataGrid.Resources>
    </DataGrid>

    <Grid Margin="0,8,0,0" Grid.Row="7" Grid.ColumnSpan="4">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <TextBlock Text="Key Bindings:"/>
        <Button Name="EditCommandBindings" x:FieldModifier="public" Content="Edit" Width="60" Margin="8 0 0 0"/>
        <Button Name="ResetCommandBindings" x:FieldModifier="public" Content="Reset" Width="60" Margin="8 0 0 0"/>
        <Button Name="ResetAllKeyBindings" x:FieldModifier="public" Content="Reset All" Width="80" Margin="8 0 0 0"/>
      </StackPanel>
    </Grid>

    <Grid Margin="0,8,0,0" Grid.Row="8" Grid.ColumnSpan="4">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <TextBlock Text="Tool:"/>
        <Button Name="EditTool" x:FieldModifier="public" Content="Edit" Width="60" Margin="8,0,0,0"/>
        <Button Name="DeleteTool" x:FieldModifier="public" Content="Delete" Width="60" Margin="8,0,0,0"/>
        <Button Name="AddTool" x:FieldModifier="public" Content="New Tool" Width="80" Margin="8,0,0,0"/>
      </StackPanel>
    </Grid>
  </Grid>
</Window>
